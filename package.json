{
  "name": "nacsos-web",
  "version": "0.2.0",
  "private": true,
  "config": {
    "nacsos_core": "http://127.0.0.1:8081",
    "nacsos_pipe": "http://127.0.0.1:8000"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "gen-core": "openapi --input $npm_package_config_nacsos_core/openapi.json --output src/plugins/api/api-core --name CoreClient --client axios --indent 2 --useOptions --exportModels true --exportServices true --exportSchemas true --exportCore false",
    "gen-pipe": "openapi --input $npm_package_config_nacsos_pipe/openapi.json --output src/plugins/api/api-pipe --name PipelinesClient --client axios --indent 2 --useOptions --exportModels true --exportServices true --exportSchemas true --exportCore false",
    "fix-core": "find src/plugins/api/api-core/ -name \"*.ts\" -type f -print -exec sed -i \"s/\\.\\{1,2\\}\\/core/@\\/plugins\\/api\\/core/\" {} \\;",
    "fix-pipe": "find src/plugins/api/api-pipe/ -name \"*.ts\" -type f -print -exec sed -i \"s/\\.\\{1,2\\}\\/core/@\\/plugins\\/api\\/core/\" {} \\;",
    "api-core": "npm run gen-core && npm run fix-core",
    "api-pipe": "npm run gen-pipe && npm run fix-pipe",
    "build-dev": "vue-cli-service build --mode=development"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.2",
    "@fortawesome/free-brands-svg-icons": "^6.1.2",
    "@fortawesome/free-regular-svg-icons": "^6.1.2",
    "@fortawesome/free-solid-svg-icons": "^6.1.2",
    "@fortawesome/vue-fontawesome": "^3.0.1",
    "@vuelidate/core": "^2.0.0-alpha.44",
    "@vuelidate/validators": "^2.0.0-alpha.31",
    "@vueuse/core": "^9.1.1",
    "axios": "^0.27.2",
    "bootstrap": "^5.2.0",
    "core-js": "^3.25.0",
    "marked": "^4.0.19",
    "pinia": "^2.0.20",
    "vue": "^3.2.37",
    "vue-router": "^4.1.4",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.4",
    "@types/marked": "^4.0.6",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/cli-plugin-router": "^5.0.8",
    "@vue/cli-plugin-typescript": "^5.0.4",
    "@vue/cli-plugin-vuex": "^5.0.8",
    "@vue/cli-service": "^5.0.8",
    "@vue/eslint-config-airbnb-with-typescript": "^7.0.0",
    "eslint": "8.22.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-vue": "^9.4.0",
    "eslint-plugin-vuejs-accessibility": "^1.2.0",
    "openapi-typescript-codegen": "^0.23.0",
    "sass": "^1.54.5",
    "sass-loader": "^13.0.2",
    "typescript": "^4.8.2"
  }
}
